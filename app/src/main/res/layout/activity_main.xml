<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkk">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        app:srcCompat="@mipmap/main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@mipmap/diary" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@mipmap/search" />

        <ImageView
            android:id="@+id/ivAround"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@mipmap/around" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/ivGame"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@mipmap/game" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:onClick="onClick"
            app:srcCompat="@mipmap/star" />

    </LinearLayout>

</LinearLayout>